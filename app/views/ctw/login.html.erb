<div class="row">
  <h2>China this week</h2>
  <%= form_tag("/ctw/result", method: "post") do %>
    <%= label_tag(:username, "Wordpress username:") %>
    <%= text_field_tag :username, nil, placeholder: "Examples: 'Anh-Minh Do', 'Terence Lee', 'Willis Wee'" %>
    <%= label_tag(:password, "Wordpress password:") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Submit") %>
  <% end %>
  <p style="color:red">DO NOT use over an unsecured public wifi network if you're entering Wordpress credentials. This prevents data theft.</p>
</div>